{
    "name": "hamza-mughales/laravel-subscriptions",
    "description": "A comprehensive subscription and plans management system for Laravel",
    "type": "library",
    "keywords": [
        "laravel",
        "subscription",
        "plans",
        "billing",
        "usage-tracking"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Hamza Mughales",
            "email": "hamzawemughales@gmail.com",
            "homepage": "https://github.com/Hamza-Mughales"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "spatie/laravel-sluggable": "^3.7",
        "spatie/laravel-translatable": "^6.0",
        "filament/support": "^3.0|^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "laravel/pint": "^1.15",
        "phpstan/phpstan": "^2.0",
        "larastan/larastan": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "HamzaMughales\\Subscriptions\\": "src/"
        },
        "files": [
            "src/Helpers/subscription.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HamzaMughales\\Subscriptions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HamzaMughales\\Subscriptions\\Providers\\SubscriptionPlansServiceProvider",
                "HamzaMughales\\Subscriptions\\Providers\\EventServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "test-profile": "vendor/bin/pest --profile",
        "pint": "vendor/bin/pint",
        "lint": "vendor/bin/pint -v",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
